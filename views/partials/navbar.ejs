<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- CSS Section -->
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel='stylesheet' href='/Content/app.css' />
  <link rel="stylesheet" href="/Content/styles.css" />
  <!-- Add Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>

</head>
<body><!-- -->

  
<!-- Main Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-darkblue">
  <img alt="logo" src="../../Assets/images/dronelogo.avif" 
        style="width: 60px;border:2px solid gray;margin-right: 30px;">
  <% if (typeof user === 'undefined') { %>
    <a class="navbar-brand" href="/" style="border:3px solid white">Library</a>
  <% } else  { %>
    <a class="navbar-brand" href="/"> Welcome, <%= user.name %>!</a>
  <% } %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">

      <% if (title == "BooksOnFly"){ %>
      <li class="nav-item active">
      <% } else  { %>
      <li class="nav-item">
      <% } %>
        <a class="nav-link" href="/"><i class="fa-solid fa-house"></i> Home </a>
      </li>

      <% if (title == "MyBooks") { %>
        <li class="nav-item active">
        <% } else  { %>
        <li class="nav-item">
        <% } %>
          <a class="nav-link" href="/mybooks"><i class="fa-solid fa-toolbox"></i> MyBooks </a>
        </li>
<!--
      <% if (title == "borrow") { %>
      <li class="nav-item active">
      <% } else  { %>
      <li class="nav-item">
      <% } %>
        <a class="nav-link" href="/borrow"><i class="fa-regular fa-id-card"></i> Borrow </a>
      </li>

      <% if (title == "Return") { %>
        <li class="nav-item active">
        <% } else  { %>
        <li class="nav-item">
        <% } %>
          <a class="nav-link" href="/return"><i class="fa-solid fa-toolbox"></i> Return </a>
        </li>
-->

      <% if (typeof user === 'undefined') { %>
        <% if (title == "Register") { %>
          <li class="nav-item active">
          <% } else  { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/register"><i class="fa-solid fa-toolbox"></i> Register </a>
          </li>

        <% if (title == "Login") { %>
          <li class="nav-item active">
          <% } else  { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/login"><i class="fa-sharp fa-solid fa-right-to-bracket"></i> Log in </a>
          </li>

      <% } else  { %>

        <% if (title == "Logout") { %>
          <li class="nav-item active">
          <% } else  { %>
          <li class="nav-item">
          <% } %>
          <form id='logoutForm' action="/users/v1/logout?_method=DELETE" method="POST">
            <a class="nav-link" href="javascript:;" onclick="document.getElementById('logoutForm').submit();"><i class="fa-sharp fa-solid fa-right-to-bracket"></i> Logout </a>
            <!--a class="nav-link" href="/users/v1/logout?_method=DELETE"><i class="fa-sharp fa-solid fa-right-to-bracket"></i> Logout </a-->
          </form>
          </li>
      <% } %>


      


  </div>
</nav>

<!-- Script Section -->
<script src="/jquery/dist/jquery.min.js"></script>
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
